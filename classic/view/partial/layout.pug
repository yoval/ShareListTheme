doctype html
html(lang='zh')
  head
    title= _config_('title')
    meta(charset='utf8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0,minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
    meta(name='referrer', content="never")
    meta(name='description', content=_config_('description'))
    meta(name='keywords', content=_config_('keywords'))
    meta(name='author', content="Cooluc's Blog")
    meta(property='og:image', content='/img/favicon_128.ico')
    meta(itemprop='image', content="/img/favicon_128.ico")

    // META
    link(rel='apple-touch-icon-precomposed', href='/img/favicon_128.ico')
    link(rel='shortcut icon', href='/img/favicon_64.ico')
    link(rel='stylesheet', href='//lib.baomitu.com/twitter-bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/vendor.css?'+__timestamp__)
    -if(g_config && g_config.custom_style)
      .
        !{g_config.custom_style}
  body
    block content
